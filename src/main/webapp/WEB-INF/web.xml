<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         id="WebApp_ID" version="4.0">

    <display-name>ColorPage</display-name>

    <servlet>
        <servlet-name>PickColorServlet</servlet-name>
        <servlet-class>colorPage.PickColorServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ViewColorServlet</servlet-name>
        <servlet-class>colorPage.ViewColorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PickColorServlet</servlet-name>
        <url-pattern>/pickcolor</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ViewColorServlet</servlet-name>
        <url-pattern>/viewcolor</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MyServlet</servlet-name>
        <servlet-class>com.example.MyServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MyServlet</servlet-name>
        <url-pattern>/myservlet/*</url-pattern>
    </servlet-mapping>

</web-app>
